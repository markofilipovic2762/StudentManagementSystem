@model IEnumerable<StudentMS.Models.Polaganje>

@{
    ViewData["Title"] = "Index";
}

<h1>Polaganja studenata</h1>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ocena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OsvojenoBodova)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RedniBrojPolaganja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Polozen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ispit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ocena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OsvojenoBodova)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RedniBrojPolaganja)
            </td>
            @if (item.Ocena > 5)
            {
                <td>
                    DA
                </td>
            }
            else
            {
                <td>
                    NE
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ispit.Naziv)
            </td>
            @if (User.IsInRole("Administrator"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }

        </tr>
}
    </tbody>
</table>
